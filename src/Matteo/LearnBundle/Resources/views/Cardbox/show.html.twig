{% extends 'MatteoLearnBundle::layout.html.twig' %}

{% block content %}
<h1>Cardbox</h1>

<table class="record_properties table ">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ cardbox.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ cardbox.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ cardbox.description }}</td>
        </tr>
        <tr>
            <th>Difficulty</th>
            <td>{{ cardbox.difficulty }}</td>
        </tr>
        <tr>
            <th>Front Side</th>
            <td>{{ cardbox.frontside }}</td>
        </tr>
        <tr>
            <th>Back Side</th>
            <td>{{ cardbox.backside }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions unstyled">
    <li>
        <a href="{{ path('learn_cardbox') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('learn_cardbox_edit', { 'id': cardbox.id }) }}">
            Edit
        </a>
    </li>
    {% if cardbox.isprivate == 1 %}
    <li>
      <div class="alert">
      This cardbox is set to private
      </div>
    </li>
    {% endif %}
    <li>
        <form action="{{ path('learn_cardbox_delete', { 'id': cardbox.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
        <form action="{{ path('learn_cardbox_add_flashcards', { 'id': cardbox.id }) }}" method="post">
            <button class="btn" type="submit">Add / Edit Flashcards</button>
        </form>
    </li>
</ul>

{% if flashcards is empty %}
<div class="alert">There are currently <strong>no Flashcards</strong> in this cardbox!</div>
{% else %}
<table class="records_list table">
    <thead>
        <tr>
            <th>Front ({{ cardbox.frontside }})</th>
            <th>Back ({{ cardbox.backside }})</th>
        </tr>
    </thead>
    <tbody>
    {% for flashcard in flashcards %}
        <tr>
            <td>{{ flashcard.front }}</td>
            <td>{{ flashcard.back }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endif %}
{% endblock content %}