{% extends 'MatteoLearnBundle::layout.html.twig' %}

{% block content %}
<h1>Category edit</h1>

<form action="{{ path('learn_category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn" type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('learn_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('learn_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock content %}
