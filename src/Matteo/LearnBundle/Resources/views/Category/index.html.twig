{% extends 'MatteoLearnBundle::layout.html.twig' %}

{% block content %}
<h1>All the Categories</h1>

<table class="records_list table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Overview</th>
            <th>Cardboxes of this Category</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('learn_category_show', { 'id' : entity.id, 'category': entity.categoryslug }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.overview }}</td>
            <td><a href="{{ path('learn_cardbox_show_category', { 'id' : entity.id, 'category': entity.categoryslug }) }}"><button class="btn">Get them</button></a></td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock content %}
