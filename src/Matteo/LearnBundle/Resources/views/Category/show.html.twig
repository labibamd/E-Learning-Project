{% extends 'MatteoLearnBundle::layout.html.twig' %}

{% block content %}
<h1>Category</h1>

<table class="record_properties table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Overview</th>
            <td>{{ entity.overview }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('learn_category') }}">
            Back to the Overview
        </a>
    </li>
</ul>
{% endblock content %}
