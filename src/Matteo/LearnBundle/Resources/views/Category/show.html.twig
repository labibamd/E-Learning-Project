{% extends 'MatteoLearnBundle::layout.html.twig' %}

{% block content %}
<h1>Category</h1>

<table class="record_properties table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ entity.description }}</td>
        </tr>f
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('learn_category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('learn_category_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('learn_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn" type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock content %}
